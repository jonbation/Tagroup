<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TagGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="activeColor">#49C120</item>
        <item name="normalColor">#AAAAAA</item>
        <item name="borderWidth">1dp</item>
        <item name="textSize">12sp</item>
        <item name="horizontalSpacing">10dp</item>
        <item name="verticalSpacing">5dp</item>
    </style>

    <style name="TagGroup.Small" parent="TagGroup">
        <item name="textSize">10sp</item>
    </style>

    <style name="TagGroup.Medium" parent="TagGroup">
        <item name="textSize">13sp</item>
    </style>

    <style name="TagGroup.Large" parent="TagGroup">
        <item name="borderWidth">1.5dp</item>
        <item name="textSize">15sp</item>
    </style>
</resources>